<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if(orders.length <= 0) { %>
                <h1>Nothing there!</h1>
            <% } else { %>
                <% orders.forEach(order => { %>
                    <h1>Order # - <%= order._id %></h1>
                    <ul>
                        <% order.products.forEach(prod => { %>
                            <li>
                                <%= prod.product.title %> (<%= prod.quantity %>)
                            </li>
                        <% }) %>
                    </ul>
                <% }) %>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>